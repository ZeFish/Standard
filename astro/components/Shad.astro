---
import Meta from "../layouts/Meta.astro";
import Menu from "../components/Menu.astro";
import Comments from "../components/Comments.astro";
import { ClientRouter } from "astro:transitions";
import logger from "../../core/logger.js";
import { Image } from "astro:assets";

import { Plus, Send } from "@lucide/astro";

// Create logger for this layout
const log = logger({ scope: "Base Layout" });

// Import site configuration from virtual module
import config from "virtual:standard/config";
import type { StandardFrameworkConfig } from "../types/standard";
---

<style>
  @media (prefers-color-scheme: light) {
    :root {
      --color-background-secondary: transparent;
    }
    button.outline:hover,
    a.btn.outline:hover {
      background: color-mix(in srgb, black 5%, transparent);
    }
  }
  header { background-color: var(--color-background-secondary);}
</style>

<section class="grid sm:grid-1 mt-4 no-rhythm">
  <div class="flex flex-col gap">
    <div class="card flow flow-col w-full">
      <header class="mb-whole">
        <h2>Team Members</h2>
        <p class="mt-half small compact muted">
          Invite your team members to collaborate.
        </p>
      </header>
      <section>
        <ul class="no-bullet flex flex-col gap-half">
          <li class="flex items-center gap-half w-full">
            <img
              src="/assets/img/avatar-1.png"
              alt="Sofia Davis"
              class="w-2 h-2 rounded"
            />
            <div class="flex flex-col gap-leading mr-auto">
              <h3 class="small">Sofia Davis</h3>
              <p class="smaller muted">m@example.com</p>
            </div>

             box
          </li>
          <li class="flex items-center gap-half w-full">
            <img
              src="/assets/img/avatar-2.png"
              alt="Jackson Lee"
              class="w-2 h-2 rounded"
            />
            <div class="flex flex-col gap-leading mr-auto">
              <h3 class="small">Jackson Lee</h3>
              <p class="smaller ellipsis muted">p@example.com</p>
            </div>

             box
          </li>
          <li class="flex items-center gap-half w-full">
            <img
              src="/assets/img/avatar-3.png"
              alt="Isabella Nguyen"
              class="w-2 h-2 rounded"
            />
            <div class="flex flex-col gap-leading mr-auto">
              <h3 class="small">Isabella Nguyen</h3>
              <p class="smaller muted">i@example.com</p>
            </div>

             box
          </li>
        </ul>
      </section>
    </div>

    <div class="card">
      <header class="mb-whole">
        <h2>Cookie Settings</h2>
        <p class="mt-half compact muted small">Manage your cookie settings here.</p>
      </header>
      <section class="grid-row">
        <label class="flex justify-between gap-2">
          <div class="flex flex-col gap-half">
            <div class="small">Strictly Necessary</div>
            <div class="smaller compact muted">
              These cookies are essential in order to use the website and use
              its features.
            </div>
          </div>
          <input type="checkbox" role="switch" class="input" checked />
        </label>
        <label class="flex justify-between gap-2">
          <div class="flex flex-col gap-half">
            <div class="small">Functional Cookies</div>
            <div class="smaller compact muted">
              These cookies allow the website to provide personalized
              functionality.
            </div>
          </div>
          <input type="checkbox" role="switch" class="input" />
        </label>
        <label class="flex justify-between gap-2">
          <div class="flex flex-col gap-half">
            <div class="small">Performance Cookies</div>
            <div class="smaller compact muted">
              These cookies help to improve the performance of the website.
            </div>
          </div>
          <input type="checkbox" role="switch" class="input" />
        </label>
      </section>
      <footer class="mt-whole">
        <button type="button" class="outline small w-full"> Save preferences </button>
      </footer>
    </div>

    <div class="card w-full">
      <header class="mb-whole">
        <h2>Payment Method</h2>
        <p class="mt-half muted compact small">
          Add a new payment method to your account.
        </p>
      </header>
      <section>
        <form class="form grid-row gap-half">
          <ul class="flex hidden no-bullet">
            <li class="flex-1">
              <input
                type="radio"
                name="payment-method-type"
                id="payment-method-type-apple"
                class="hidden peer"
              />
              <label
                for="payment-method-type-apple"
                class="smaller flex flex-col items-center justify-between rounded-md border-2 border-muted p-4 hover:bg-muted peer-checked:border-primary [&>svg]:mb-3 [&>svg]:size-6"
              >
                icon credit card Card
              </label>
            </li>
            <li class="flex-1">
              <input
                type="radio"
                name="payment-method-type"
                id="payment-method-type-card"
                class="hidden peer"
              />
              <label
                for="payment-method-type-card"
                class="smaller font-medium leading-none flex flex-col items-center justify-between rounded-md border-2 border-muted p-4 hover:bg-muted peer-checked:border-primary [&>svg]:mb-3 [&>svg]:size-6"
              >
                <svg
                  role="img"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <title>PayPal</title>
                  <path
                    d="M7.016 19.198h-4.2a.562.562 0 0 1-.555-.65L5.093.584A.692.692 0 0 1 5.776 0h7.222c3.417 0 5.904 2.488 5.846 5.5-.006.25-.027.5-.066.747A6.794 6.794 0 0 1 12.071 12H8.743a.69.69 0 0 0-.682.583l-.325 2.056-.013.083-.692 4.39-.015.087zM19.79 6.142c-.01.087-.01.175-.023.261a7.76 7.76 0 0 1-7.695 6.598H9.007l-.283 1.795-.013.083-.692 4.39-.134.843-.014.088H6.86l-.497 3.15a.562.562 0 0 0 .555.65h3.612c.34 0 .63-.249.683-.585l.952-6.031a.692.692 0 0 1 .683-.584h2.126a6.793 6.793 0 0 0 6.707-5.752c.306-1.95-.466-3.744-1.89-4.906z"
                  ></path>
                </svg>
                Paypal
              </label>
            </li>
            <li class="flex-1">
              <input
                type="radio"
                name="payment-method-type"
                id="payment-method-type-paypal"
                class="hidden peer"
              />
              <label
                for="payment-method-type-paypal"
                class="smaller font-medium leading-none flex flex-col items-center justify-between rounded-md border-2 border-muted p-4 hover:bg-muted peer-checked:border-primary [&>svg]:mb-3 [&>svg]:size-6"
              >
                <svg
                  role="img"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <title>Apple</title>
                  <path
                    d="M12.152 6.896c-.948 0-2.415-1.078-3.96-1.04-2.04.027-3.91 1.183-4.961 3.014-2.117 3.675-.546 9.103 1.519 12.09 1.013 1.454 2.208 3.09 3.792 3.039 1.52-.065 2.09-.987 3.935-.987 1.831 0 2.35.987 3.96.948 1.637-.026 2.676-1.48 3.676-2.948 1.156-1.688 1.636-3.325 1.662-3.415-.039-.013-3.182-1.221-3.22-4.857-.026-3.04 2.48-4.494 2.597-4.559-1.429-2.09-3.623-2.324-4.39-2.376-2-.156-3.675 1.09-4.61 1.09zM15.53 3.83c.843-1.012 1.4-2.427 1.245-3.83-1.207.052-2.662.805-3.532 1.818-.78.896-1.454 2.338-1.273 3.714 1.338.104 2.715-.688 3.559-1.701"
                  ></path>
                </svg>
                Apple Pay
              </label>
            </li>
          </ul>
          <div class="grid-row gap-leading">
            <label class="smaller" for="payment-method-name">Name</label>
            <input
              style="display:block;"
              type="text"
              id="payment-method-name"
              placeholder="John Doe"
            />
          </div>
          <div class="grid-row gap-leading">
            <label class="smaller" for="payment-method-city">City</label>
            <input
              type="text"
              id="payment-method-city"
              placeholder="New York"
            />
          </div>
          <div class="grid-row gap-leading">
            <label class="smaller" for="payment-method-card-number">Card Number</label>
            <input
              type="text"
              id="payment-method-card-number"
              placeholder="1234 5678 9012 3456"
            />
          </div>
          <div class="flex gap-leading">
            <div class="grid-row flex-1 gap-leading">
              <label class="smaller"for="payment-method-expiration-month">Expires</label>
              <select id="payment-method-expiration-month" class="w-full">
                <option value="01">January</option>
                <option value="02">February</option>
                <option value="03">March</option>
                <option value="04">April</option>
                <option value="05">May</option>
                <option value="06">June</option>
                <option value="07">July</option>
                <option value="08">August</option>
                <option value="09">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
              </select>
            </div>
            <div class="grid-row flex-1 gap-leading">
              <label class="smaller" for="payment-method-expiration-year">Year</label>
              <select id="payment-method-expiration-year" class="w-full">
                <option value="2024">2024</option>
                <option value="2025">2025</option>
                <option value="2026">2026</option>
                <option value="2027">2027</option>
                <option value="2028">2028</option>
                <option value="2029">2029</option>
                <option value="2030">2030</option>
                <option value="2031">2031</option>
                <option value="2032">2032</option>
                <option value="2033">2033</option>
                <option value="2034">2034</option>
              </select>
            </div>
            <div class="grid-row flex-1 gap-leading">
              <label class="smaller" for="payment-method-cvv">CVV</label>
              <input
                type="text"
                id="payment-method-cvv"
                placeholder="123"
                maxlength="4"
                class="w-full"
              />
            </div>
          </div>
          <button type="button" class="w-full small mt-whole">Continue</button>
        </form>
      </section>
    </div>
  </div>

  <div class="flex flex-col no-rhythm">
    <div class="card w-full">
      <section>
        <header class="flex mb-whole items-center gap-half">
          <img
            src="/assets/img/avatar-1.png"
            alt="Sofia Davis"
            class="w-2 h-2 rounded"
          />
          <div class="flex flex-col gap-leading mr-auto">
            <h3 class="small">Sofia Davis</h3>
            <p class="smaller muted">m@example.com</p>
          </div>
          <button
            type="
                  button"
            class="icon outline rounded"
            data-tooltip="New message"
          >
            <Plus size="16" />
          </button>
        </header>
        <section class="w-full grid-row">
          <div
            style="max-width:75%;"
            class="w-fit flex p-half flex-col mr-auto radius small bg-alternate"
          >
            Hi, how can I help you today?
          </div>
          <div
            style="max-width:75%;"
            class="w-fit muted p-half flex flex-col ml-auto radius small invert"
          >
            Hey, I'm having trouble with my account.
          </div>
          <div
            style="max-width:75%;"
            class="w-fit flex p-half flex-col mr-auto radius small bg-alternate"
          >
            What seems to be the problem?
          </div>
          <div
            style="max-width:75%;"
            class="w-fit muted flex p-half flex-col ml-auto radius small invert"
          >
            I can't log in.
          </div>
        </section>
        <footer class="flex gap-half mt-whole items-center">
          <input
            type="text"
            class="input w-full"
            placeholder="Type your message here..."
            oninput="
                if (this.value) {
                  this.parentElement
                    .querySelector('button')
                    .removeAttribute('disabled');
                } else {
                  this.parentElement
                    .querySelector('button')
                    .setAttribute('disabled', 'true');
                }
              "
          />
          <button type="button" class="icon" disabled><Send size="16" /></button
          >
        </footer>
      </section>
    </div>

    <div class="card w-full">
      <header class="mb-2" >
        <h2>Create an account</h2>
        <p class="small muted mt-half">
          Enter your email below to create your account
        </p>
      </header>
      <section class="grid-row gap-leading">
        <div class="flex">
          <button type="button" class="outline h-whole flex-1 gap-leading">
            <svg
              role="img"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <title>GitHub</title>
              <path
                d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
              ></path>
            </svg>
            GitHub
          </button>
          <button type="button" class="outline h-whole flex-1 gap-leading">
            <svg
              role="img"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <title>Google</title>
              <path
                d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"
              ></path>
            </svg>
            Google
          </button>
        </div>
        <div class="relative">
          <div class="absolute flex-col items-center w-full mt-trim">
            <hr />
          </div>
          <div class="relative flex justify-center w-full">
            <span class="bg-background px-leading small muted uppercase"
              >Or continue with</span
            >
          </div>
        </div>
        <form class="form grid-row">
          <div class="grid-row gap-leading">
            <label class="small" for="demo-card-form-email">Email</label>
            <input type="email" id="demo-card-form-email" />
          </div>
          <div class="grid-row gap-leading">
            <div class="flex items-center gap-2">
              <label class="small" for="demo-card-form-password">Password</label>
              <a
                href="#"
                class="ml-auto inline-block smaller"
                >Forgot your password?</a
              >
            </div>
            <input type="password" id="demo-card-form-password" />
          </div>
          <button type="button" class="mt-2 small btn w-full">Create an account</button>
        </form>
      </section>
    </div>

    <div class="card w-full">
      <header class="mb-2">
        <h2>Report an issue</h2>
        <p class="small mt-leading mb">What area are you having problems with?</p>
      </header>
      <section>
        <form class="form grid-row">
          <div class="flex">
            <div class="grid-row small flex-1">
              <label for="report-issue-area">Area</label>
              <select id="report-issue-area" class="w-full">
                <option value="team">Team</option>
                <option value="billing">Billing</option>
                <option value="account">Account</option>
                <option value="deployments">Deployments</option>
                <option value="support">Support</option>
              </select>
            </div>
            <div class="grid-row gap-leading flex-1">
              <label class="small" for="report-issue-security-level">Security Level</label>
              <select id="report-issue-security-level" class="w-full">
                <option value="1">Severity 1 (Highest)</option>
                <option value="2">Severity 2</option>
                <option value="3">Severity 3</option>
                <option value="4">Severity 4 (Lowest)</option>
              </select>
            </div>
          </div>
          <div class="grid-row gap-leading">
            <label class="small" for="report-issue-subject">Subject</label>
            <input
              type="text"
              id="report-issue-subject"
              placeholder="I need help with..."
              class="w-full"
            />
          </div>
          <div class="grid-row gap-leading">
            <label class="small" for="report-issue-description">Description</label>
            <textarea
              id="report-issue-description"
              placeholder="Please include all information relevant to your issue."
              class="w-full"></textarea>
          </div>
          <footer class="flex items-center mt-2 justify-between">
            <button type="button" class="ghost smaller">Cancel</button>
            <button type="button" class="smaller">Continue</button>
          </footer>
        </form>
      </section>
    </div>
  </div>
</section>
