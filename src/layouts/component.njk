---
layout: base
---



<article class="reading md">
  <!-- Meta badges row -->
      <div style="display: flex; gap: var(--space-xs); flex-wrap: wrap;">
        <span class="badge badge-{{ type }}">{{ type | upper }}</span>
        {% if category %}<span class="badge badge-category">{{ category }}</span>{% endif %}
        {% if since %}<span class="badge badge-since">Since v{{ since }}</span>{% endif %}
        {% if deprecated %}<span class="badge badge-deprecated">⚠️ Deprecated</span>{% endif %}
      </div>
  <!-- Main title -->
  <h2>{{ title }}</h2>

  <!-- Deprecation warning if needed -->
  {% if deprecated %}
    <div class="callout" style="--color-callout: var(--color-warning);">
      <div class="callout-title">
        <strong>⚠️ Deprecation Notice</strong>
      </div>
      <div class="callout-content">
        {{ deprecated if deprecated !== true else 'This component is deprecated and should not be used for new projects.' }}
      </div>
    </div>
  {% endif %}
    {{ content | safe }}


</article>
