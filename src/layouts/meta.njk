<meta charset="utf-8">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">

      <!-- Enhanced SEO Meta Tags -->
      {% set page_excerpt = (page.rawInput or '') | string %}
      {%- set meta_description = pageExcerpt or (site.description | string) or "" -%}
      <meta name="description" content="{{ meta_description }}">
      <meta name="keywords" content="{{ site.keywords }}">
      <meta name="author" content="{{ site.author.name }}">
      <meta name="language" content="{{ site.language }}">

      <!-- Canonical URL -->
      {% set canonical_path = page.url %}
      {%- if 'index.html' in canonical_path -%}
        {%- set canonical_path = canonical_path | replace('index.html', '') -%}
      {%- endif -%}
      <link rel="canonical" href="{{ site.url }}{{ canonical_path }}">

      <!-- Feed & Sitemap -->
      <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.url }}feed.xml">
      <link rel="sitemap" type="application/xml" title="Sitemap" href="{{ site.url }}sitemap.xml">

      <!-- Robots Meta -->
      {% if visibility == "private" %}
      <meta name="robots" content="noindex, nofollow">
      {%- else -%}
      <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">

      {% if title %}
      <meta property="og:title" content="{{ title }}">
      <meta property="og:type" content="article">
      {%- else -%}
      <meta property="og:title" content="{{ site.title }}">
      <meta property="og:type" content="website">
      {%- endif -%}

      <!-- Enhanced Open Graph -->
      <meta property="og:locale" content="{{ site.language }}">
      <meta property="og:site_name" content="{{ site.title }}">
      <meta property="og:url" content="{{ site.url }}{{ page.url }}">
      <meta property="og:description" content="{{ meta_description | striptags | trim | truncate(160) }}">

      <!-- OG Image - Extract first image from markdown content -->
      {% set image_url = page.rawInput | extractFirstImage %}
      {%- set has_image = image_url is not none -%}
      {%- if has_image -%}
        {%- set image_alt = page.data.title -%}
      {%- else -%}
        {%- set image_alt = site.title -%}
      {%- endif -%}
      <meta property="og:image" content="{%- if has_image -%}{{ site.url }}assets/img/{{ image_url }}{%- else -%}https://v1.opengraph.11ty.dev/{{ site.url }}{{ canonical_path }}{%- endif -%}">
      <meta property="og:image:alt" content="{{ image_alt }}">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="630">

      <!-- Article specific Open Graph -->
      {% if created %}
      <meta property="article:published_time" content="{{ created | dateToXmlschema }}">
      <meta property="article:author" content="{{ site.author.name }}">
      <meta property="article:section" content="Photography">
      {%- if tags -%}
      {%- for tag in tags -%}
      <meta property="article:tag" content="{{ tag }}">
      {%- endfor -%}
      {%- endif -%}
      {%- endif -%}

      <!-- Enhanced Twitter Cards -->
      {% if has_image %}
      <meta name="twitter:card" content="summary_large_image">
      <meta name="twitter:image" content="{{ site.url }}assets/img/{{ image_url }}">
      <meta name="twitter:image:alt" content="{{ image_alt }}">
      {%- else -%}
      <meta name="twitter:card" content="summary">
      <meta name="twitter:image" content="https://v1.opengraph.11ty.dev/{{ site.url }}{{ canonical_path }}">
      <meta name="twitter:image:alt" content="{{ site.author.name }}">
      {%- endif -%}

      <meta name="twitter:site" content="@{{ site.twitter_username or 'francisfontaine' }}">
      <meta name="twitter:creator" content="@{{ site.twitter_username or 'francisfontaine' }}">
      <meta name="twitter:title" content="{%- if title -%}{{ title }}{%- else -%}{{ site.title }}{%- endif -%}">
      <meta name="twitter:description" content="{{ meta_description | striptags | trim | truncate(160) }}">

      <!-- Schema.org Structured Data -->
      <script type="application/ld+json">
      {
      "@context": "https://schema.org",
      "@type": "{%- if title -%}BlogPosting{%- else -%}WebSite{%- endif -%}",
      {%- if title -%}
      "headline": "{{ title | escape }}",
      "description": "{{ meta_description | striptags | trim | escape }}",
      "author": {
          "@type": "Person",
          "name": "{{ site.author.name }}",
          "url": "{{ site.url }}/now/"
      },
      "publisher": {
          "@type": "Person",
          "name": "{{ site.author.name }}",
          "url": "{{ site.url }}",
          "logo": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/francis-fontaine-avatar.png"
          }
      },
      {%- if created -%}
      "datePublished": "{{ created | dateToXmlschema }}",
      "dateModified": "{{ (modified or created) | dateToXmlschema }}",
      {%- endif -%}
      {%- if has_image -%}
      "image": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/img/{{ image_url }}",
          "width": 1200,
          "height": 630
      },
      {%- endif -%}
      "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "{{ site.url }}{{ page.url }}"
      }
      {%- else -%}
      "name": "{{ site.title }}",
      "description": "{{ site.description or '' }}",
      "url": "{{ site.url }}",
      "author": {
          "@type": "Person",
          "name": "{{ site.author.name }}",
          "url": "{{ site.url }}"
      }
      {%- endif -%}
      }
      </script>{% endif %}


      <!-- Favicons & App Icons https://realfavicongenerator.net/ -->
      <link rel="apple-touch-icon" sizes="180x180" href="{{ site.url }}favicons/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="{{ site.url }}favicons/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="{{ site.url }}favicons/favicon-16x16.png">
        <!--link rel="manifest" href="{{ site.url }}favicons/site.webmanifest"-->
      <link rel="mask-icon" href="{{ site.url }}favicons/safari-pinned-tab.svg" color="#000000">
      <link rel="shortcut icon" href="{{ site.url }}favicons/favicon.ico">

      <!-- Mobile -->
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta name="mobile-web-app-capable" content="yes">
      <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
      <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)">
      <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)">

      <!-- Windows Tiles -->
      <meta name="msapplication-TileColor" content="#000000">
      <meta name="msapplication-config" content="{{ site.url }}favicons/browserconfig.xml">
      <meta name="theme-color" content="#000000">
