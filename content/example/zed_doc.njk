    <style>
      /* Documentation-specific styles inspired by Zed */
      :root {
        --sidebar-width: 280px;
        --header-height: 60px;
        --doc-max-width: 800px;
      }

      body {
        display: grid;
        grid-template-columns: var(--sidebar-width) 1fr;
        grid-template-rows: var(--header-height) 1fr;
        min-height: 100vh;
        margin: 0;
        --body-padding-multiplier: 0;
      }

      /* Header */
      .doc-header {
        grid-column: 1 / -1;
        display: flex;
        align-items: center;
        padding: 0 var(--space);
        border-bottom: var(--border);
        background: var(--color-background);
        position: sticky;
        top: 0;
        z-index: var(--z-sticky);
      }

      .doc-logo {
        font-size: var(--scale-l);
        font-weight: var(--font-header-weight);
        color: var(--color-accent);
        text-decoration: none;
      }

      /* Sidebar Navigation */
      .doc-sidebar {
        border-right: var(--border);
        overflow-y: auto;
        padding: var(--space);
        background: var(--color-background);
        position: sticky;
        top: var(--header-height);
        height: calc(100vh - var(--header-height));
      }

      .doc-nav-section {
        margin-bottom: var(--space-l);
      }

      .doc-nav-title {
        font-size: var(--scale-xs);
        font-weight: var(--bold-weight);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-muted);
        margin-bottom: var(--space-xs);
      }

      .doc-nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .doc-nav-list li {
        margin-bottom: var(--space-3xs);
      }

      .doc-nav-list li::before {
        display: none;
      }

      .doc-nav-link {
        display: block;
        padding: var(--space-2xs) var(--space-xs);
        color: var(--color-foreground);
        text-decoration: none;
        border-radius: var(--border-radius);
        font-size: var(--scale-s);
        transition:
          background-color 0.2s ease,
          color 0.2s ease;
      }

      .doc-nav-link:hover {
        background: var(--color-background-secondary);
        color: var(--color-accent);
      }

      .doc-nav-link.active {
        background: var(--color-background-secondary);
        color: var(--color-accent);
        font-weight: var(--bold-weight);
      }

      /* Main Content */
      .doc-main {
        overflow-y: auto;
        padding: var(--space-xl) var(--space-l);
      }

      .doc-content {
        max-width: var(--doc-max-width);
        margin: 0 auto;
      }

      /* Page Header */
      .doc-page-header {
        margin-bottom: var(--space-2xl);
        padding-bottom: var(--space-l);
        border-bottom: var(--border);
      }

      .doc-page-title {
        font-size: var(--scale-3xl);
        margin-bottom: var(--space-s);
        line-height: 1;
      }

      .doc-page-subtitle {
        font-size: var(--scale-l);
        color: var(--color-muted);
        font-weight: normal;
      }

      /* Table of Contents */
      .doc-toc {
        background: var(--color-background-secondary);
        border: var(--border);
        border-radius: var(--border-radius);
        padding: var(--space);
        margin-bottom: var(--space-xl);
      }

      .doc-toc-title {
        font-size: var(--scale-s);
        font-weight: var(--bold-weight);
        margin-bottom: var(--space-xs);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--color-muted);
      }

      .doc-toc-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .doc-toc-list li {
        margin-bottom: var(--space-3xs);
      }

      .doc-toc-list li::before {
        display: none;
      }

      .doc-toc-link {
        color: var(--color-foreground);
        text-decoration: none;
        font-size: var(--scale-s);
      }

      .doc-toc-link:hover {
        color: var(--color-accent);
      }

      /* Section Headers */
      .doc-section {
        margin-bottom: var(--space-2xl);
        scroll-margin-top: calc(var(--header-height) + var(--space));
      }

      .doc-section h2 {
        font-size: var(--scale-2xl);
        margin-bottom: var(--space);
        padding-bottom: var(--space-xs);
        border-bottom: var(--border);
      }

      .doc-section h3 {
        font-size: var(--scale-xl);
        margin-top: var(--space-xl);
        margin-bottom: var(--space-s);
      }

      /* Code Examples */
      .doc-example {
        margin: var(--space-l) 0;
      }

      .doc-example-title {
        font-size: var(--scale-s);
        font-weight: var(--bold-weight);
        margin-bottom: var(--space-xs);
        color: var(--color-muted);
      }

      pre {
        background: var(--color-background-secondary);
        border: var(--border);
        border-radius: var(--border-radius);
        padding: var(--space);
        overflow-x: auto;
        font-size: var(--scale-s);
        line-height: 1.6;
      }

      code {
        background: var(--color-background-secondary);
        padding: 0.125em 0.375em;
        border-radius: 3px;
        font-size: 0.9em;
      }

      pre code {
        background: none;
        padding: 0;
      }

      /* Property Table */
      .doc-props {
        width: 100%;
        border-collapse: collapse;
        margin: var(--space-l) 0;
        font-size: var(--scale-s);
      }

      .doc-props th {
        text-align: left;
        padding: var(--space-xs) var(--space-s);
        background: var(--color-background-secondary);
        border-bottom: var(--border);
        font-weight: var(--bold-weight);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: var(--scale-xs);
      }

      .doc-props td {
        padding: var(--space-xs) var(--space-s);
        border-bottom: var(--border);
      }

      .doc-props code {
        font-size: 0.85em;
      }

      /* Callout Boxes */
      .doc-callout {
        background: var(--color-background-secondary);
        border-left: 3px solid var(--color-accent);
        padding: var(--space);
        margin: var(--space-l) 0;
        border-radius: var(--border-radius);
      }

      .doc-callout-title {
        font-weight: var(--bold-weight);
        margin-bottom: var(--space-xs);
        display: flex;
        align-items: center;
        gap: var(--space-xs);
      }

      .doc-callout.info {
        border-left-color: var(--color-info);
      }

      .doc-callout.warning {
        border-left-color: var(--color-warning);
      }

      .doc-callout.success {
        border-left-color: var(--color-success);
      }

      /* Responsive */
      @media (max-width: 1024px) {
        body {
          grid-template-columns: 1fr;
        }

        .doc-sidebar {
          display: none;
        }

        .doc-main {
          padding: var(--space) var(--space);
        }
      }

      /* Anchor Links */
      .doc-anchor {
        color: var(--color-subtle);
        text-decoration: none;
        margin-left: var(--space-xs);
        opacity: 0;
        transition: opacity 0.2s ease;
      }

      h2:hover .doc-anchor,
      h3:hover .doc-anchor {
        opacity: 1;
      }

      .doc-anchor:hover {
        color: var(--color-accent);
      }
