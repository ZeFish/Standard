{
  "name": "@zefish/standard",
  "version": "0.12.3",
  "description": "A fine-art typography framework implementing classical design principles, mathematical precision with the golden ratio, and micro-typography rules inspired by the masters of print design.",
  "author": "Francis Fontaine",
  "license": "MIT",
  "homepage": "https://github.com/ZeFish/Standard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZeFish/Standard.git"
  },
  "bugs": {
    "url": "https://github.com/ZeFish/Standard/issues"
  },
  "keywords": [
    "css",
    "framework",
    "sass",
    "typography",
    "fine-art",
    "golden-ratio",
    "vertical-rhythm",
    "print-design",
    "micro-typography",
    "swiss-style",
    "baseline-grid",
    "classical-typography",
    "standard",
    "book-layout"
  ],
  "main": "src/eleventy.js",
  "type": "module",
  "exports": {
    "./css": "./dist/standard.min.css",
    "./js": "./dist/standard.min.js",
    "./lab": "./dist/standard.lab.js",
    ".": "./src/eleventy/eleventy.js",
    "./cloudflare": "./src/eleventy/cloudflare.js"
  },
  "files": [
    "dist",
    "src/eleventy",
    "src/layouts"
  ],
  "scripts": {
    "start": "rm -rf _site && npm run build:css && npx @11ty/eleventy --serve --port=8090 --quiet",
    "dev": "concurrently \"npm:watch:*\"",
    "watch:css": "sass --watch --load-path=node_modules src/styles/standard.scss dist/standard.css --no-source-map",
    "watch:js": "nodemon --watch src/js/standard.js --exec \"npm run build:js\"",
    "build": "npm run build:assets && npx @11ty/eleventy",
    "build:assets": "npm run build:css && npm run build:css-min && npm run build:js && npm run build:js-min && node scripts/inject-version.js",
    "build:css": "sass --load-path=node_modules src/styles/standard.scss dist/standard.css --no-source-map",
    "build:css-min": "sass --load-path=node_modules src/styles/standard.scss dist/standard.min.css --style=compressed --no-source-map",
    "build:js": "cp src/js/standard.js dist/standard.js",
    "build:js-min": "terser src/js/standard.js -o dist/standard.min.js --compress --mangle && terser src/js/standard.lab.js -o dist/standard.lab.js",
    "clean:comments": "rm -rf data/comments && mkdir -p data/comments && echo '# Comments Storage' > data/comments/README.md",
    "clean:ports": "lsof -ti:8080,8081,8082,8083,8084,8085,8086,8087,8088,8089 | xargs kill -9 2>/dev/null || true",
    "release": "npm run build && release-it --only-version",
    "changelog": "auto-changelog -p --template keepachangelog --output CHANGELOG.md"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "auto-changelog": "^2.5.0",
    "concurrently": "^8.2.2",
    "glob": "^10.3.10",
    "nodemon": "^3.1.10",
    "release-it": "^19.0.5",
    "rimraf": "^5.0.5",
    "sanitize.css": "^13.0.0",
    "sass": "^1.93.2",
    "terser": "^5.44.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "ci": true,
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}",
      "requireCleanWorkingDir": false,
      "requireUpstream": false
    },
    "npm": {
      "skipChecks": true
    },
    "github": {
      "release": true,
      "web": false,
      "autoGenerate": true
    },
    "hooks": {
      "after:bump": "npm run changelog"
    }
  },
  "directories": {
    "example": "example"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@zefish/standard": "^0.11.25",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-obsidian-callouts": "^0.3.2",
    "nunjucks": "^3.2.4"
  }
}
