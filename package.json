{
  "name": "@zefish/standard",
  "version": "0.18.8",
  "description": "A fine-art typography framework implementing classical design principles, mathematical precision with the golden ratio, and micro-typography rules inspired by the masters of print design.",
  "author": "Francis Fontaine",
  "license": "MIT",
  "homepage": "https://github.com/ZeFish/Standard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZeFish/Standard.git"
  },
  "bugs": {
    "url": "https://github.com/ZeFish/Standard/issues"
  },
  "keywords": [
    "css",
    "framework",
    "sass",
    "typography",
    "fine-art",
    "golden-ratio",
    "vertical-rhythm",
    "print-design",
    "micro-typography",
    "swiss-style",
    "baseline-grid",
    "classical-typography",
    "standard",
    "book-layout"
  ],
  "main": "src/astro/standard.js",
  "type": "module",
  "bin": {
    "standard-init": "bin/init.js",
    "standard-build-css": "bin/build-css.js",
    "standard-build-js": "bin/build-js.js",
    "standard-check": "bin/analyzer.js"
  },
  "exports": {
    "./styles/standard.scss": "./src/styles/standard.scss",
    "./styles/standard.theme.scss": "./src/styles/standard.theme.scss",
    "./css": "./dist/standard.min.css",
    "./theme": "./dist/standard.theme.min.css",
    "./js": "./dist/standard.min.js",
    "./lab": "./dist/standard.lab.js",
    ".": "./src/astro/standard.js",
    "./cloudflare": "./src/cloudflare/api/comments.js",
    "./remark/tags": "./src/astro/remark/tags.js",
    "./remark/standard": "./src/astro/remark/standard.js",
    "./remark/escape-code": "./src/anpmstro/remark/escape-code.js",
    "./remark/fix-dates": "./src/astro/remark/fix-dates.js",
    "./remark/syntax": "./src/astro/remark/syntax.js",
    "./rehype/standard": "./src/astro/rehype/standard.js",
    "./rehype/typography": "./src/astro/rehype/typography.js",
    "./routes/robots": "./src/astro/routes/robots.js",
    "./routes/manifest": "./src/astro/routes/manifest.js",
    "./routes/headers": "./src/astro/routes/headers.js",
    "./utils/content": "./src/astro/utils/content.js",
    "./utils/collections": "./src/astro/utils/collections.js",
    "./utils/typography": "./src/astro/utils/typography.js",
    "./components/Menu": "./src/astro/components/Menu.astro",
    "./components/Fonts": "./src/astro/components/Fonts.astro",
    "./components/Comments": "./src/astro/components/Comments.astro",
    "./components/Assets": "./src/astro/components/Assets.astro",
    "./components/Htmx": "./src/astro/components/Htmx.astro",
    "./components/Lab": "./src/astro/components/Lab.astro",
    "./components/Css": "./src/astro/components/Css.astro",
    "./layouts/Base": "./src/astro/layouts/Base.astro",
    "./layouts/Meta": "./src/astro/layouts/Meta.astro",
    "./layouts/Encrypted": "./src/astro/layouts/Encrypted.astro"
  },
  "files": [
    "bin",
    "dist",
    "src/astro",
    "src/cloudflare",
    "src/lib",
    "src/styles"
  ],
  "scripts": {
    "build:css": "node bin/build-css.js",
    "build:js": "node bin/build-js.js",
    "watch:css": "node bin/build-css.js --watch",
    "watch:js": "node bin/build-js.js --watch",
    "check": "npm run build && node bin/analyzer.js",
    "build": "npmr run build:css & npm run build:js",
    "watch:assets": "node bin/build-css.js --watch",
    "dev": "npm run watch:css & npm run watch:js & npm run clean:ports && astro dev",
    "start": "astro dev",
    "release": "export $(cat .env | xargs) && release-it --ci",
    "changelog": "auto-changelog -p --template keepachangelog --output CHANGELOG.md",
    "clean:ports": "lsof -ti:8083 | xargs kill -9 2>/dev/null || true",
    "kill-node": "killall node || taskkill /F /IM node.exe",
    "commit": "git add . && npx opencommit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}",
      "requireCleanWorkingDir": false,
      "requireUpstream": false,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "web": false,
      "autoGenerate": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md",
        "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n"
      }
    },
    "hooks": {
      "after:bump": "npm run changelog && npm run build"
    }
  },
  "directories": {
    "example": "example"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "astro": "^5.16.0",
    "cheerio": "^1.1.2",
    "clean-css": "^5.3.3",
    "dotenv": "^17.2.3",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.1",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-obsidian-callouts": "^0.3.2",
    "nunjucks": "^3.2.4",
    "sass": "^1.93.2",
    "terser": "^5.44.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@release-it/conventional-changelog": "^10.0.1",
    "auto-changelog": "^2.5.0",
    "concurrently": "^8.2.2",
    "htmx-ext-preload": "^2.1.2",
    "htmx.org": "^2.0.8",
    "nodemon": "^3.1.10",
    "opencommit": "^3.2.10",
    "release-it": "^19.0.5",
    "rimraf": "^5.0.5",
    "sanitize.css": "^13.0.0"
  }
}
